{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["@strapi/types", "@types/node"],
    "paths": {
      "@strapi/strapi": ["./node_modules/@strapi/strapi/types"],
      "@strapi/admin": ["./node_modules/@strapi/admin/types"]
    }
  },
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}